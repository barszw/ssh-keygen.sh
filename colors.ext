# Bash Color Basics: Coloring Text with Escape Sequences
Date_String=$(date --iso)
Time_String=$(date "+%T")

if test -t 1; then
 # Standard output (console), set colors
    GREEN='\e[32m'
    CYAN='\e[36m'
    RED='\e[31m'
    BOLD='\e[1m'
    NO_COLOR='\e[0m'

    PRINT_INFO="${NO_COLOR}${CYAN}[INFO]${NO_COLOR}"
    PRINT_INFO_TXT="${NO_COLOR}${CYAN}[INFO]${GREEN}"
    PRINT_INPUT="${NO_COLOR}${BOLD}[INPUT]${NO_COLOR}"
    PRINT_OK="${NO_COLOR}${GREEN}${BOLD}[OK]${NO_COLOR}"
    PRINT_ERROR="${NO_COLOR}${RED}${BOLD}[ERROR]${NO_COLOR}"
    PRINT_DATE="${NO_COLOR}${RED}${BOLD}[$Date_String]${NO_COLOR}"
    PRINT_TIME="${NO_COLOR}${RED}${BOLD}[$Time_String]${NO_COLOR}"
else
 # The output is to a file, we don't need colorsw
    GREEN="";CYAN="";RED="";BOLD="";NOCOLOR=""
fi
